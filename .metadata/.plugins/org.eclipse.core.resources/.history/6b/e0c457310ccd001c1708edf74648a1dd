package service;

import java.util.ArrayList;
import java.util.List;
import java.util.Observable;
import java.util.Optional;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Service;

import dao.ProductoDao;
import model.Producto;
@Service
public class ProductServiceImp implements productService {
	
	@Autowired
	ProductoDao pd;

	@Override
	public void create(Producto p) {
		if(buscarProducto(p.getId()) == null)
		pd.save(p);
	}

	@Override
	public void delete(int idProducto) {
		pd.deleteById(idProducto);
	}

	@Override
	public void update(Producto p) {
		if(buscarProducto(p.getId()) != null)
			pd.save(p);
	}

	@Override
	public List<Producto> read(String seccion) {
		String sql ="select * from productos where seccion LIKE ?";
		List<Producto> products = template.query(sql, (rs,f) ->new Producto(rs.getInt("idProducto"),
				rs.getString("nombre"),
				rs.getString("seccion"),
				rs.getDouble("precio"),
				rs.getInt("stock")), seccion);	
		return products;
	}

	@Override
	public Producto buscarProducto(int idProducto) {
		Optional<Producto> productoO = pd.findById(idProducto);
		if(productoO.isPresent()) return productoO.get();
		else return null;
	}

}
