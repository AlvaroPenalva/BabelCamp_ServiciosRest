package controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RestController;
import model.Vuelo;
import service.VueloService;

@RestController
public class VueloController {

	@Autowired
	VueloService hs;
	
	@GetMapping(value ="Vuelos",produces=MediaType.APPLICATION_JSON_VALUE)
	public List<Vuelo> alumnos(){
		return hs.findAll();
	}
	
	@PutMapping(value ="Vuelo/{idVuelo, plazas}",produces=MediaType.TEXT_PLAIN_VALUE)
	public Vuelo buscarAlumno(@PathVariable("idVuelo") int idVuelo, @PathVariable("plazas") int plazas){
		return String.valueOf(hs.updateVuelo(idVuelo, plazas));
	}
}
